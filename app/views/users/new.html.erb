<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', value: "user#{ (User.count) + 1 }" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', value: "user#{ (User.count) + 1 }@email.com" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', value: "password" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', value: "password" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
